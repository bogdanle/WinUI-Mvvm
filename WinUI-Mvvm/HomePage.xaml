<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="WinUI_Mvvm.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI_Mvvm"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="MyBorderBackground" Color="#AAAAAA"/>
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="MyBorderBackground" Color="#333333"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="2" Margin="5,5,0,0" VerticalAlignment="Center" Text="Email:" />
        <TextBox Grid.Row="3" Margin="5" InputScope="EmailNameOrAddress" IsSpellCheckEnabled="False" Text="{x:Bind ViewModel.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="4" Margin="7,0,0,5" FontSize="13" Foreground="Orange" Text="Incorrect email format" 
                       TextWrapping="Wrap" VerticalAlignment="Center" Visibility="{x:Bind ViewModel.IsEmailInvalid, Mode=OneWay}" />

        <TextBlock Grid.Row="5" Margin="5,5,0,0" VerticalAlignment="Center" Text="Full name:" />
        <TextBox Grid.Row="6" Grid.Column="1" Margin="5" Text="{x:Bind ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Grid.Row="7" Margin="7,0,0,5" FontSize="13" Foreground="Orange" Text="Name must contain at least 2 characters" 
                       VerticalAlignment="Center" Visibility="{x:Bind ViewModel.IsNameInvalid, Mode=OneWay}" TextWrapping="Wrap" />

        <Button Grid.Row="11" Grid.Column="1" Margin="5,10,5,5" Width="75" HorizontalAlignment="Right" Name="SubmitButton" 
                    Command="{x:Bind ViewModel.SubmitCommand}" Content="Submit" VerticalAlignment="Top" />

        <Border Grid.Row="12" Background="{ThemeResource MyBorderBackground}" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                    Margin="5,25,5,5" Height="80" CornerRadius="5" BorderBrush="DarkGray" BorderThickness="1" Opacity="0.85">
            <StackPanel Margin="10,0,10,0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <TextBlock Margin="0,6,0,6" Text="Please wait..." HorizontalAlignment="Center" TextWrapping="Wrap" />
                <ProgressRing Margin="0,6,0,8" IsIndeterminate="True" />
            </StackPanel>
        </Border>

        <InfoBar Grid.RowSpan="20" Margin="5,5,5,10"  VerticalAlignment="Bottom" IsOpen="{x:Bind ViewModel.IsSuccess, Mode=OneWay}" Opacity="0.9" Severity="Success" Message="User has been successfully registered." />
        <InfoBar Grid.RowSpan="20" Margin="5,5,5,10" VerticalAlignment="Bottom" FontWeight="Bold" IsOpen="{x:Bind ViewModel.IsFailure, Mode=OneWay}" Opacity="0.9" Severity="Error" Message="Failed to register user. Please try again." />
    </Grid>
</Page>
